<header>
  <div class="row">

    <div class="column column-3 sidebar">
      <h2>Current Player:</h2>

      <div class="current-player-icon">
      </div>
    </div>

    <div class="column column-6 middle">
      <div class="row">
        <h1 id="connect-four"><span class="vitamin-c">Connect</span><span class="gamebookers-blue">Four</span></h1>
      </div>
      <div class="row">
        <button id="newGame" >New Game</button>
        <!-- {{game.num}} - {{game.lastWinner}} - {{game.redScore}} - {{game.blueScore}} -->

        <span id="game-stats" game-count={{game.num}} red-score={{game.redScore}} blue-score={{game.blueScore}} last-winner={{game.lastWinner}}></span>
      </div>
    </div>

    <div class="column column-3 sidebar">
      <h2>Score:</h2>
      <div>
        Red: <span id="red-score">{{game.redScore}}</span>
      </div>
      <div>
        Blue: <span id="blue-score">{{game.blueScore}}</span>
      </div>
    </div>

  </div>
</header>

